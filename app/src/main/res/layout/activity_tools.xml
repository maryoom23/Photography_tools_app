<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img"
    tools:context=".tools" >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="256dp"
        android:layout_height="166dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/u45" />

    <TextView
        android:id="@+id/textView3"
        style="@android:style/Widget.DeviceDefault.Light.TextView.SpinnerItem"
        android:layout_width="349dp"
        android:layout_height="350dp"
        android:text="Cameras come in various types to cater to different photography needs. DSLR cameras are favored by enthusiasts and professionals, offering interchangeable lenses and advanced controls. Their prices range from a few hundred dollars for entry-level models to several thousand dollars for high-end options. Mirrorless cameras, known for their compact size and versatility, also feature interchangeable lenses and vary in price from a few hundred dollars to several thousand dollars. Point-and-shoot cameras are compact and easy to use, with prices ranging from around $100 for basic models to a few hundred dollars for advanced compact cameras."
        android:textSize="16sp"
        android:textStyle="bold"
        android:typeface="serif"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.632" />

    <Button
        android:id="@+id/button6"
        android:layout_width="111dp"
        android:layout_height="57dp"
        android:backgroundTint="@color/teal_700"
        android:text="Naxt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.903" />

</androidx.constraintlayout.widget.ConstraintLayout>